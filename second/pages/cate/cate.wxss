/* pages/cate/cate.wxss */

/* 头部布局 */
.todo_header
{
  width: 100%;
  height: 180rpx;
  background-color: #323232;
}
.text1
{
  height: 80rpx;
  font-size:55rpx;
  color:#fff;
}
/* input */
.inpt
{
  width: 80%;
  height: 70rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.header_wrapper
{
  width: 100%;
  height: 100rpx;
  display:flex;
  justify-content: space-around;
  align-items: center;
}
.add{
  width:15%;
  height:70rpx;
  background-color: #fff;
  display:flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
/* 内容布局 */
.content_container
{
  width: 100%;
  height: auto;
}
.content_container
{
  width: 100%;
  margin-top:30rpx;
}
.pending_header
{
  width: 90%;
  font-size:60rpx;
  font-weight: bold;
  display:flex;
  justify-content: space-between;
}
.pending_items
{
  width: 90%;
  height: 80rpx;
  display:flex;
  margin-top:20rpx;
  display:flex;
  justify-content: flex-start;
  align-items: center;
}
.view2
{
  width: 75%;
}
